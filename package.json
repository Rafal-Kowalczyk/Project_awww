{
  "name": "awww-softwere",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:html && npm run test:js",
    "test:html": "glob-run nu-html-checker *.html",
    "init-project": "npm run init:dirs && npm run init:files && npm run init:gitignore && npm run init:npm-install",
    "init:dirs": "mkdirp src css",
    "init:files": "touch README.md index.html src/style.scss",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init:npm-install": "npm install",
    "build": "npm run test && npm run build:clean && npm run build:sass && npm run build:autoprefixer",
    "build:clean": "rimraf build/*.css",
    "build:sass": "node-sass --output-style compact -o css src/sass",
    "build:sass:dev": "node-sass --output-style expanded --source-map true -o css src/sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "watch": "parallelshell \"npm run watch:sass\" \"npm run watch:autoprefixer\" \"npm run watch:browsersync\" ",
    "watch:sass": "node-sass --output-style expanded --source-map true -o css src/sass --watch",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css",
    "watch:browsersync": "browser-sync --server --files \"css/*.css,index.html\""
  },
  "keywords": [],
  "author": "Rafa≈Ç Kowalczyk",
  "license": "ISC",
  "dependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.19.0",
    "glob-run": "^0.1.6",
    "jshint": "^2.9.5",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.7.2",
    "nu-html-checker": "^0.1.0",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.2"
  },
  "description": ""
}
